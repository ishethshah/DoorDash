<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GlobalButtonStyle.TRANSPARENT" parent="GlobalButtonStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TextAppearance.SubTitle" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.white" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/translucent_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.SubTitle.Elevation" parent="TextAppearance.SubTitle" />

    <style name="TextAppearance.Normal" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Text" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.Holo.ProgressBar" />

    <style name="ProgressBarStyle.Small" parent="@android:style/Widget.Holo.ProgressBar.Small">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="CardView.Elevation">
        <item name="android:layout_margin">@dimen/default_vsmall</item>
    </style>

</resources>
